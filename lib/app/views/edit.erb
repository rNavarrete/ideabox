 <div id="wrapper">
 <%= erb :navbar %>

<form action='/<%= idea.id %>' method='POST'>
  <div class="row">
    <div class="large-12 columns">
      <p>
        <% if idea.id %>
        <h3 style="color:white; font-weight: 100; font-size: -webkit-xxx-large; text-align: center; padding-top: 94px">Edit</h3>          <% else %>
        Your Idea:
        <% end %>
      </p>
      <% if idea.id %>
      <input type="hidden" name="_method" value="PUT" />
      <% end %>
      <input type='text' id="text-field" name='idea[title]' value="<%= idea.title %>"/><br/>
      <textarea id="text-description" name='idea[description]' rows="4"><%= idea.description %></textarea><br/>
      <input type='file' name='myfile' class="custom-file-input"><br/>
      <input type='submit'/>
    </div>
  </div>
</form>
</div>
